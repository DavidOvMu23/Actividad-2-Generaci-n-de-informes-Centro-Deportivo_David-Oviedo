<Window x:Class="View2.ReservasActividad"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Gestión de socios" Height="790" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2D6A8D" />
        <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#1F4A63" />
        <SolidColorBrush x:Key="AccentBrush" Color="#F2B138" />
        <SolidColorBrush x:Key="LightBrush" Color="#F7FAFD" />
        <SolidColorBrush x:Key="BorderBrush" Color="#D6DFE6" />

    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#EEF3F8" Offset="0" />
                <GradientStop Color="#DCE7F1" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
    </Grid>
</Window>
