<Window x:Class="Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Centro Deportivo - Home" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFFAFAFA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Centro Deportivo" FontSize="24" FontWeight="Bold" Foreground="#2E8B57" Margin="0,0,0,20" Grid.Row="0" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="350" >
            <Button x:Name="button_socios" Content="Informe de Socios" Height="40" Margin="0,0,0,15"
                    Background="#2E8B57" Foreground="White" FontWeight="Bold" FontSize="16"
                    Click="button_socios_Click"/>
            <Button x:Name="button_reservasActividad" Content="Reservas por Actividad" Height="40" Margin="0,0,0,15"
                    Background="#2E8B57" Foreground="White" FontWeight="Bold" FontSize="16"
                    Click="button_reservasActividad_Click"/>
            <Button x:Name="button_reservasSocios" Content="Reservas por Socio" Height="40"
                    Background="#2E8B57" Foreground="White" FontWeight="Bold" FontSize="16"
                    Click="button_reservasSocios_Click"/>
        </StackPanel>
    </Grid>
</Window>